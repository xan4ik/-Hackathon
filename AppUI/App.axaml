<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AppUI"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="AppUI.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Light" PrimaryColor="Purple" SecondaryColor="Amber" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"></StyleInclude>
    </Application.Styles>
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#6200EE"></SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#FFFFFF"></SolidColorBrush>
    </Application.Resources>
    
</Application>
